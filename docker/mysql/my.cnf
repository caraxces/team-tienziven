[mysqld]
# Kích thước bộ nhớ đệm
innodb_buffer_pool_size = 128M
innodb_log_buffer_size = 8M

# Tối ưu hóa truy vấn
key_buffer_size = 32M
max_allowed_packet = 16M
thread_stack = 192K
thread_cache_size = 8

# Tối ưu hóa connection
max_connections = 100
table_open_cache = 400

# Tối ưu hóa thời gian
wait_timeout = 300
interactive_timeout = 300

# Tối ưu hóa query cache
query_cache_size = 32M
query_cache_limit = 1M

# Tối ưu hóa thực thi
join_buffer_size = 2M
sort_buffer_size = 2M
read_buffer_size = 2M
read_rnd_buffer_size = 1M

# Tối ưu hóa log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = 2 